---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import ME from "../assets/images/me.webp";
import { type MyInformation } from "../types/interfaces";

type Props = MyInformation;

const {
  description,
  technologies,
  socialNetworks,
  yearsOfExperience,
  projects,
  talksAndWorkshops,
} = Astro.props;
---

<div class="lg:flex space-y-8 lg:space-y-0">
  <div class="w-full lg:w-1/3 lg:order-2 text-center">
    <Image
      src={ME}
      alt="Imagen de Eduardo Álvarez"
      class="inline-block object-cover w-[240px] h-[240px] md:w-[270px] md:h-[270px] xl:w-[320px] xl:h-[320px] rounded-full"
      loading="lazy"
      decoding="async"
    />
  </div>
  <div
    class="w-full lg:w-1/3 lg:order-1 grid grid-cols-1 md:grid-cols-3 lg:grid-cols-1 gap-6 lg:gap-8"
  >
    <div>
      <h6
        class="font-outfit font-medium tracking-wider uppercase text-sm text-white mb-2"
      >
        Descripción
      </h6>
      <p class="text-white/70 leading-[1.75]">
        {description}
      </p>
    </div>

    <div>
      <h6
        class="font-outfit font-medium tracking-wider uppercase text-sm text-white mb-2"
      >
        Tecnologías
      </h6>

      <ul class="text-white/70">
        {
          technologies.map((technology: string) => (
            <li class="list-none inline-block relative pl-[8px] pr-[8px] before:content-[''] before:absolute before:left-0 before:top-1/2 before:-translate-y-1/2 before:w-[5px] before:h-[5px] before:rounded-md before:bg-white/80">
              {technology}
            </li>
          ))
        }
      </ul>
    </div>

    <div>
      <h6
        class="font-outfit font-medium tracking-wider uppercase text-sm text-white mb-2"
      >
        Mis redes sociales
      </h6>
      <ul class="flex space-x-1">
        {
          socialNetworks.map(
            (social_network: { name: string; link: string; icon: string }) => (
              <li class="list-none">
                <a
                  class="flex items-center justify-center w-8 h-8 rounded-full bg-white/10 hover:bg-white/20 transition-all duration-200 ease-in-out"
                  href={social_network.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  title={social_network.name}
                >
                  <Icon name={social_network.icon} />
                </a>
              </li>
            )
          )
        }
      </ul>
    </div>
  </div>

  <div
    class="w-full lg:w-1/3 order-3 grid grid-cols-3 lg:grid-cols-1 gap-6 lg:gap-7 lg:text-right"
  >
    <div>
      <h6
        class="font-outfit font-medium tracking-wider uppercase text-sm text-white mb-2"
      >
        Proyectos finalizados
      </h6>
      <span
        class="text-4xl lg:text-5xl xl:text-6xl font-outfit font-light text-white"
        >{projects}</span
      >
    </div>
    <div>
      <h6
        class="font-outfit font-medium tracking-wider uppercase text-sm text-white mb-2"
      >
        Años de experiencia
      </h6>
      <span
        class="text-4xl lg:text-5xl xl:text-6xl font-outfit font-light text-white"
        >{yearsOfExperience}+</span
      >
    </div>
    <div>
      <h6
        class="font-outfit font-medium tracking-wider uppercase text-sm text-white mb-2"
      >
        Charlas y talleres
      </h6>
      <span
        class="text-4xl lg:text-5xl xl:text-6xl font-outfit font-light text-white"
        >{talksAndWorkshops}</span
      >
    </div>
  </div>
</div>
